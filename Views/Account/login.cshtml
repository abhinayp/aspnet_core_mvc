@{
    ViewData["Title"] = "Login";
    ViewData["body_class"] = "login-class";
}
<div class="">
    <div class="">
        <form action="/api/account/sign-in" method="post">
            <div class="page-center">
                <div class="b-trans rounded w-250 shadow-sm">
                    <div class="p-4 rounded-top">
                        <h2 class="text-teal text-center">Login</h2>
                    </div>
                    <div class="p-4 pb-4 rounded-bottom">
                        <div>
                            <div class=""><small>Username</small></div><input class="input-modern b-transparent w-100" name="email" placeholder="Username" type="text" />
                        </div>
                        <div class="mt-3">
                            <div class=""><small>Password</small> </div><input class="input-modern b-transparent w-100" name="password" placeholder="Password" type="password" />
                        </div>
                    </div>
                    <div class="text-right mt-4">
                        <button class="p-2 btn-primary text-light w-100 rounded-bottom" type="submit">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>