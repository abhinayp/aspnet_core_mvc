<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - assignment4</title>

    <environment include="Development">

    </environment>
    <environment exclude="Development">

    </environment>
    <environment names="Development">
        <script src="~/dist/main.js"></script>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- Popper JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/dist/main.js" asp-append-version="true"></script>
    </environment>

</head>
<body class=@ViewData["bodyClass"]>
    <div class="">
        <nav class="navbar navbar-light bg-light justify-content-between shadow-sm">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" class="d-inline-block align-top" height="30px" />
                <b class="ml-1">Shopping Cart</b>
            </a>
            <!-- Button trigger create item modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
                Create Item
            </button>

            @*<form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </nav>
        @RenderBody()
    </div>

    <!-- Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form action="/item" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create Shopping Item</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div>
                            <div>
                                <input class="form-control" name="title" type="text" placeholder="Title" />
                            </div>
                            <div class="mt-2">
                                <input class="form-control" name="url" type="text" placeholder="URL (http://images.goo....)" />
                            </div>
                            <div class="mt-3">
                                <textarea rows="3" class="form-control" name="description" type="text" placeholder="Enter Description Here ...."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <environment include="Development">
    </environment>
    <environment exclude="Development">
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
